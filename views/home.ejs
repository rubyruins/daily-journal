<%- include("partials/header") -%>
	<h1>Home</h1>
	<p><%= homeStartingContent %></p>
	<form class="form-inline" action="#" method="POST" autocomplete="off">
		<div class="form-group">
		 	<input type="text" class="form-control" name="searchPost" placeholder="Search the archives...">
		</div>
		<button type="submit" class="btn btn-primary mb-2">Go</button>
	</form>
	<% Posts.forEach(function(post) { %>
		<div>
			<h2><%= post.title %></h2>
			<p><%= post.content.substring(0, 100) + "..." %><a href="/posts/<%=post.title %>">    Read more</a></p>
		</div>
	<% }); %>
<%- include("partials/footer") -%>
